{
  "name": "projet-semestre-6-otake-back",
  "version": "1.0.0",
  "description": "Web project using Nodejs for backend",
  "main": "index.js",
  "scripts": {
    "test": "mocha tests/ -R spec --recursive --exit",
    "lint": "./node_modules/.bin/eslint -c .eslintrc.js app/",
    "lint:fix": "./node_modules/.bin/eslint -c .eslintrc.js app/ --fix",
    "dev": "nodemon -e js -w ./ ./server.js",
    "start": "node --trace-warnings ./server.js",
    "knex": "knex",
    "km": "knex migrate:rollback && knex migrate:latest && knex seed:run",
    "sonar": "gulp sonar",
    "coverage": "nyc mocha tests/ -R spec --recursive --exit",
    "deploy": "pm2 start server.js --log-date-format \"YYYY-MM-DD HH:mm Z\" --name nodejs-ps6",
    "stop": "pm2 stop nodejs-ps6 || echo 'fail to stop nodejs-ps6 process'",
    "redeploy": "pm2 restart nodejs-ps6 || npm run deploy"
  },
  "contributors": [
    {
      "name": "爽爽陈 (Shuangshuang Chen)",
      "email": "shuangshuang.chen@etu.univ-cotedazur.fr"
    },
    {
      "name": "Betsara Marcellin",
      "email": "betsara.marcellin@etu.univ-cotedazur.fr"
    },
    {
      "name": "Maxime Castellano",
      "email": "maxime.castellano@etu.univ-cotedazur.fr"
    },
    {
      "name": "Jason Haenlin",
      "email": "jason.haenlin@etu.univ-cotedazur.fr"
    }
  ],
  "keywords": [
    "nodejs",
    "mocha",
    "postgresql",
    "jenkins",
    "ps6",
    "polytech",
    "Exchange Student"
  ],
  "license": "ISC",
  "pre-commit": [
    "eslint"
  ],
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.15.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-security": "^1.4.0",
    "gulp": "^4.0.0",
    "migrate": "^1.6.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "sonarqube-scanner": "^2.4.0",
    "sqlite3": "^4.0.6",
    "supertest": "^3.4.2"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.24.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "knex": "^0.16.3",
    "morgan": "^1.9.1",
    "objection": "^1.6.3",
    "pg": "^7.8.1",
    "winston": "^3.2.1"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "include": [
      "app/**/*.js",
      "server.js"
    ],
    "exclude": [
      "tests/**/*.spec.js"
    ]
  }
}
